<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <input type="text" placeholder="name" name="name" value="{{ restaurant.name }}" required>
  <input type="text" placeholder="name_en" name="name_en" value="{{ restaurant.name_en }}" required>
  <input type="text" placeholder="category" name="category" value="{{ restaurant.category }}" required>
  <input type="text" placeholder="image" name="image" value="{{ restaurant.image }}" required>
  <input type="text" placeholder="location" name="location" value="{{ restaurant.location }}" required>
  <input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}" required>
  <input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}" required>
  <input type="text" placeholder="rating" name="rating" value="{{ restaurant.rating }}" required>
  <input type="text" placeholder="description" name="description" value="{{ restaurant.description }}" required>
  <button type="submit">Save</button>
  <a href="/">back</a>
</form>